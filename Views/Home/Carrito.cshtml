@model IEnumerable<proyecto_ecommerce_.NET_MVC_.Models.Detalle>;

@{

}
<!-- Breadcrumb -->
<nav aria-label="breadcrumb">
    <ol class="breadcrumb il-flex il-flex-wrap il-items-center il-gap-1.5 il-break-words il-text-sm il-text-muted-foreground sm:il-gap-2.5">
        <li class="il-inline-flex il-items-center il-gap-1.5"><a asp-action="Index">Home</a></li>
        <li class="il-inline-flex il-items-center il-gap-1.5">></li>
        <li class="il-inline-flex il-items-center il-gap-1.5 breadcrumb-item active"><a asp-action="Carrito">Carrito</a></li>
    </ol>
</nav>

<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-lg-9">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Producto</th>
                            <th>Precio($)</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                            <th>Accion</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                            <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                            <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                            <td>@Html.DisplayFor(modelItem => item.Total)</td>
                            <td>
                                <a class="btn btn-danger" asp-action="DeleteCart" asp-route-id="@item.Producto?.Id">Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-lg-3">
                <h2>SUB TOTAL</h2>
                <ul class="list-group">
                    <li>
                        <h5>$@ViewBag.Total</h5>
                        <a class="btn btn-primary mt-5">Ver Orden</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>


<style>
 a {
        color: inherit;
        text-decoration: inherit;
    }
</style>